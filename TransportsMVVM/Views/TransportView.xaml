<UserControl x:Class="TransportsMVVM.Views.TransportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TransportsMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">

    <Grid>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>-->

        <StackPanel HorizontalAlignment = "Center">
            <TextBlock Text = "{Binding Path = PageTitle}" Margin = "0,50,0,0" Height="50" />
        </StackPanel>

        <StackPanel Width="336" Margin="0,100,0,0">
            <TextBlock HorizontalAlignment = "Center">
                <TextBox HorizontalAlignment = "Center" Text="Longitude :" FontWeight="Bold" />
                <TextBox HorizontalAlignment = "Center" Text="Latitude : " FontWeight="Bold" />
                <TextBox HorizontalAlignment = "Center" Text="Distance : " FontWeight="Bold" />
            </TextBlock>
        </StackPanel>

        <StackPanel VerticalAlignment = "Center" HorizontalAlignment = "Center" Margin="0,0,0,0">

            <!--<boucle sur la collection observable>-->
            <ItemsControl ItemsSource = "{Binding Path = Transports}" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation = "Horizontal">

                            <TextBox Text = "{Binding Path = BusStop, Mode = OneWay}" Width = "200" Margin = "20 5 3 5" />

                            <!--<boucle sur la collection BusLine>-->
                            <ItemsControl ItemsSource = "{Binding Path = BusLine}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation = "Horizontal">
                                            <!--<le . récupère toute la collection>-->
                                            <TextBox Text = "{Binding Path = ., Mode = OneWay}" Width = "200" Margin = "20 5 3 5" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Grid>
</UserControl>
